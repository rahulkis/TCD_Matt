<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <form action="" id="" method="POST" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6">
                        <br>
                        <div class="form-group">
                            <label> Upload Statistics </label>
                            <input type="file" id="stat_file" name="stat_file" class="form-control-line" data-file_ext=".xlsx" accept=".xlsx">
                            <span style="color: red;">(Please upload only .xlsx file)</span>
                            </br>
                            <a href="/admin/statistics/download-sample-xls" style="text-decoration:underline;">Download sample .xlsx file</a>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label style="width:100%">&nbsp;</label>
                            <button type="submit" class="btn btn-primary">Upload</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- Small boxes (Stat box) -->
    
    <!-- /.row -->
</section>
<%- contentFor('page_js') %>
<script>
    $('#dateSet').datepicker({
        format: 'mm-dd-yyyy',
        autoclose: true
    });
</script>