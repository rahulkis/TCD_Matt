<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header with-border">
                    <!-- <h3 class="box-title">Filter</h3> -->
                    <div class="box-tools pull-right">
                        <a href="/admin/page-add" class="btn btn-primary">Add New Page</a>
                        <!-- <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button> -->
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    
                </div>
            </div>
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body">
                <%- include ('./partials/admin_messages') %>
                <table id="example2" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Page Title</th>
                            <th>Content</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%
                        if(data.hasOwnProperty('pages')){
                            data.pages.forEach((row)=>{
                        %>
                        <tr>
                            <td><%=row.page_title%></td>
                            <td style="width:60%"><%=row.excerpt%></td>
                            <td> <% if(row.is_active){ %>
                                <span class="chip green lighten-5">
                                <span class="green-text">Active</span>
                                </span>
                                <% }else{ %>
                                <span class="chip red lighten-5">
                                <span class="red-text">Inactive</span>
                                </span>
                                <% } %>
                            </td>
                            <td>
                                <!-- <a data-toggle="modal" data-target="#myModal" class="btn btn-primary btn-xs" style="color:#fff"><i class="fa fa-eye"></i></a> -->
                                <a href="/admin/page-update/<%= row._id%>" class="btn btn-warning btn-xs" style="color:#fff"><i class="fa fa-edit"></i></a>
                                <!-- <button type="button" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i></button> -->
                                <a href="/admin/page-delete/<%= row._id%>" class="btn btn-danger btn-xs removerecord" onclick="return confirm('Are you sure,you want to delete this record ?')"><i class="fa fa-trash-o"></i></a>
                            </td>
                        </tr>
                    
                        <% })
                        } %>
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
    <!-- /.row -->
    
</section>

