<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">New Physique</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <form class="form-material" method="post" action="/admin/physique/add" id="physiqueForm">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Physique Name<span class="required">*</span></label>
                                    <input type="text" name="name" placeholder="Physique Name" class="form-control form-control-line" value="<%=data.name%>">
                                </div>
                            </div>
                            <div class="col-md-3 text-center">
                                <div class="form-group">
                                <label style="width:100%">&nbsp;</label>
                                  <input type="checkbox" id="status" name="is_active" value='1' checked>
                                  <label for="status">Active</label>
                                </div>
                           </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label style="width:100%">&nbsp;</label>
                                    <button type="submit" class="btn btn-primary">Add Physique</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="box">
                <!-- /.box-header -->
                <div class="box-header with-border">
					<h3 class="box-title">Filter</h3>
                    <form class="form-material" method="post">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Physique Name</label>
                                    <input type="text" name="name" placeholder="Physique Name" class="form-control form-control-line" value="<%=data.filterDatas.name%>">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label style="width:100%">&nbsp;</label>
                                    <% let checked = (data.filterDatas.is_active==1) ? "checked" : "" %>
                                    <input type="checkbox" id="status" name="is_active" value="1" <%=checked%>>
                                    <label for="status">Active</label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label style="width:100%">&nbsp;</label>
                                    <button type="submit" class="btn btn-primary" name="filter" value="1">Filter</button>
                                    <button type="submit" class="btn btn-default" name="filter" value="2">Reset</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="box-body">
                    <%- include ('./partials/admin_messages') %>
                    <table id="example2" class="table table-bordered table-striped">
                        <thead>
                            <tr class="headings">
                                <th>Physique Name</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        <%
                        if(data.physique && data.physique.length > 0){
                            data.physique.forEach((individualPhysique)=>{
                        %>
                            <tr id="id_<%= individualPhysique._id %>"> 
                                <td><%=individualPhysique.name%></td>
                                <td><% if(individualPhysique.is_active){ %>
                                    <span class="chip green lighten-5">
                                    <span class="green-text">Active</span>
                                    </span>
                                    <% }else{ %>
                                    <span class="chip red lighten-5">
                                    <span class="red-text">Inactive</span>
                                    </span>
                                    <% } %>
                                </td>
                                <td>
                                    <div class="row text-center">
                                        <div class="col-md-1">
                                            <a href="/admin/physique/update?id=<%= individualPhysique._id%>" class="btn btn-warning btn-xs" style="color:#fff"><i class="fa fa-edit"></i></a>
                                        </div>
                                        <div class="col-md-1">
                                            <form class="form-material" method="post" action="/admin/physique/delete?id=<%=individualPhysique._id%>">
                                                <div class="form-group">
                                                   <button type="submit"class="btn btn-danger btn-xs" style="color:#fff" onclick="return confirm('Are you sure,you want to delete this record ?')"><i class="fa fa-trash"></i></button>
                                                </div>
                                            </form>
                                       </div>
                                    </div>
                                </td>
                            </tr>
                        <% })
                        } %>
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
    <!-- /.row -->
</section>
<%- contentFor('page_js') %>
<script>
    $(document).ready(function () {
        $("#physiqueForm").validate({
            rules:{
                name:{
                    required:true
                }
            },
            errorElement:'div'
        })
    });
</script>