<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">
            <%- include ('./partials/admin_messages') %>
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Banner Advertisement</h3>
                    <div class="pull-right">
                        <a href="/admin/banner-advertisement" class="btn btn-warning btn-xs" style="color:#fff"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <form class="form-material" method="post" action="/admin/banner-advertisement/manage" enctype="multipart/form-data" id="dataForm">
						<input type="hidden" name="id" value="<%=data.details._id%>"/>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Title<span class="required">*</span></label>
                                    <input type="text" name="banner_advertisement_title" placeholder="Title" class="form-control form-control-line" value="<%=data.details.banner_advertisement_title%>">
                                </div>
                            </div>
                            
                        </div>
                        <div class="row">
                            <div class="col-md-6">
								<% if (data.details.banner_advertisement_image.length > 0) {%>
									<img src="/uploads/banner_advertisement/<%=data.details.banner_advertisement_image%>" alt="<%=data.details.banner_advertisement_title%>" height="80px" width="120px">
								<% } %>
                                <div class="form-group">
                                    <label>Image<span class="required">*</span></label>
                                    <input type="file" name="banner_advertisement_image" class="file" data-theme="fa">
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label style="width:100%">&nbsp;</label>
                                       <input type="checkbox" id="status" name="is_active" value="1" <%=data.details.is_active == 1 ? 'checked' : ''%>>
                                       <label for="status">Active</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label style="width:100%">&nbsp;</label>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<%- contentFor('page_js') %>
<script src="/script/additional-methods.js"></script>
<script>
    $(document).ready(function () {
        $("#dataForm").validate({
            rules:{
                banner_advertisement_title:{
                    required:true
                },
                banner_advertisement_image:{
					<% if (data.details.banner_advertisement_image.length == 0) { %>
						required:true,
					<% } %>
					extension: "jpg,jpeg,png"
                }
            },
			messages:{
                banner_advertisement_title:{
                    required:"Please add an advertisement title"
                },
				banner_advertisement_image: {
                    required:"Please add an advertisement image",
					extension: "Only image type extensions (jpg,jpeg,png) are allowed"
				}
			},
            errorElement:'div'
        })
    });
</script>