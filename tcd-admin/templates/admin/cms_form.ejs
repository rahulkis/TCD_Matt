<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">
            <%- include ('./partials/admin_messages') %>
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">New Method</h3>
                    <div class="pull-right">
                        <a href="/admin/cms" class="btn btn-warning btn-xs" style="color:#fff"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <form class="form-material" method="post" action="/admin/cms/manage" id="cmsForm">
                        <input type="hidden" name="id" value="<%=data.details._id%>">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Page Title<span class="required">*</span></label>
                                    <input type="text" name="page_title" placeholder="Page Title" class="form-control form-control-line" value="<%=data.details.page_title%>" <%= data.details.page_title ? 'readonly' : '' %>>
                                </div>
                            </div>                            
                        </div>                       
                        <div class="row">
                            <div class="col-md-12">
								<label>Page Content<span class="required">*</span></label>
                                <textarea id="page_content" rows="7" cols="80" name="page_content" placeholder="Write your content here...." class="form-control form-control-line" required><%=data.details.page_content%></textarea>
                            </div>
                        </div>
						<div class="row" style="margin-top:10px;">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Meta Title</label>
                                    <input type="text" name="meta_title" placeholder="Meta Title" class="form-control form-control-line" value="<%=data.details.meta_title%>">
                                </div>
                            </div>   
							<div class="col-md-6">
                                <div class="form-group">
                                    <label>Meta Keyword</label>
                                    <input type="text" name="meta_keywords" placeholder="Meta Keyword" class="form-control form-control-line" value="<%=data.details.meta_keywords%>">
                                </div>
                            </div>
                        </div> 
						<div class="row">
                            <div class="col-md-12">
								<label>Meta Description</label>
                                <textarea rows="7" cols="80" name="meta_description" placeholder="Write your content here...." class="form-control form-control-line"><%=data.details.meta_description%></textarea>
                            </div>
                        </div>
						<div class="row">
						<div class="col-md-3">
							<div class="form-group">
								<label style="width:100%">&nbsp;</label>
								   <input type="checkbox" id="status" name="is_active" value="<%=data.details.is_active%>" <%=data.details.is_active == 1 ? 'checked':''%>>
								   <label for="status">Active</label>
							</div>
						</div>
						</div>                        
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label style="width:100%">&nbsp;</label>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<%- contentFor('page_js') %>
<script src="https://cdn.ckeditor.com/ckeditor5/19.1.1/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create( document.querySelector( '#page_content' ) )
        .catch( error => {
            console.error( error );
        } );
</script>
<script>
    $(document).ready(function () {
        $("#cmsForm").validate({
            ignore: [],
            debug: false,
            rules:{
                page_title:{
                    required:true
                },
				page_content:{
                    required:true
                }
            },
            messages:{
                page_content:{
                    required:'Page Content should not be blank, Please add few lines for content'
                }
            },
            errorElement:'div'
        })
    });
</script>