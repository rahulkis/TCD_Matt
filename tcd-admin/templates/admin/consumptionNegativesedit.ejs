<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Update ConsumptionNegatives</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <form class="form-material" method="post" action="/admin/consumption-negatives/update?id=<%=data.updatingConsumptionNegatives.id_%>" id="consumptionNegativesForm">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Consumption Negative Name<span class="required">*</span></label>
                                    <input type="text" name="name" placeholder="Consumption Negative Name" class="form-control form-control-line" value="<%=data.updatingConsumptionNegatives.name %>">
                                </div>
                            </div>
                            <div class="col-md-3 text-center">
                                 <div class="form-group">
                                    <label style="width:100%">&nbsp;</label>
                                    <% let checked = data.updatingConsumptionNegatives.is_active ? "checked" : "" %>
                                    <input type="checkbox" id="status" name="is_active" value="<%=data.updatingConsumptionNegatives.is_active%>" <%=checked%>>
                                    <label for="status">Active</label>
                                 </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label style="width:100%">&nbsp;</label>
                                    <button type="submit" class="btn btn-primary">Update Consumption Negative</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body">
                    <%- include ('./partials/admin_messages') %>
                    <table id="example2" class="table table-bordered table-striped">
                        <thead>
                            <tr class="headings">
                                <th>Consumption Negative Name</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        <%
                        if(data.consumptionNegatives && data.consumptionNegatives.length > 0){
                            data.consumptionNegatives.forEach((individualConsumptionNegatives)=>{
                        %>
                            <tr id="id_<%= individualConsumptionNegatives._id %>"> 
                                <td><%=individualConsumptionNegatives.name%></td>
                                <td><% if(individualConsumptionNegatives.is_active){ %>
                                    <span class="chip green lighten-5">
                                    <span class="green-text">Active</span>
                                    </span>
                                    <% }else{ %>
                                    <span class="chip red lighten-5">
                                    <span class="red-text">Inactive</span>
                                    </span>
                                    <% } %>
                                </td>
                                <td>
                                  <div class="row text-center">
                                        <div class="col-md-1">
                                            <a href="/admin/consumption-negatives/update?id=<%= individualConsumptionNegatives._id%>" class="btn btn-warning btn-xs" style="color:#fff"><i class="fa fa-edit"></i></a>
                                        </div>
                                        <div class="col-md-1">
                                            <form class="form-material" method="post" action="/admin/consumption-negatives/delete?id=<%=individualConsumptionNegatives._id%>">
                                                <div class="form-group">
                                                   <button type="submit"class="btn btn-danger btn-xs" style="color:#fff" onclick="return confirm('Are you sure,you want to delete this record ?')"><i class="fa fa-trash"></i></button>
                                                </div>
                                            </form>
                                        </div>
                                     </div>
                               </td>
                            </tr>
                        <% })
                        } %>
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
    <!-- /.row -->
</section>
<%- contentFor('page_js') %> 
<script>
    $(document).ready(function () {
        $("#consumptionNegativesForm").validate({
            rules:{
                name:{
                    required:true
                }
            },
            errorElement:'div'
        })
    });
</script>
