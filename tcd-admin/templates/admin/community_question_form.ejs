<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">
            <%- include ('./partials/admin_messages') %>
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Community Questions</h3>
                    <div class="pull-right">
                        <a href="/admin/community-questions" class="btn btn-warning btn-xs" style="color:#fff"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <form class="form-material" method="post" action="/admin/community-questions/manage" id="communtyQuestionForm">
                        <input type="hidden" name="id" value="<%=data.details._id%>">
                      
                        <div class="row">
                            <div class="col-md-12">
								<label>Category<span class="required">*</span></label>
                                <select name="category" class="form-control form-control-line">
                                    <option value="">Select Category</option>
                                    <% data.details.categoryList && data.details.categoryList.forEach((cat) => { %>                                        
                                        <option value="<%= cat._id %>" <%= cat._id.toString() === data.details.category._id.toString() ? 'selected': ''%>><%= cat.name %></option>                                        
                                    <% }) %>
                                </select>
                                <!-- <input type="text" name="category" placeholder="Category" class="form-control form-control-line" value="<%=data.details.category%>"> -->
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
								<label>Question<span class="required">*</span></label>
                                <input type="text" name="question" placeholder="Question" class="form-control form-control-line" value="<%=data.details.question%>">
                            </div>
                        </div>
						
						<div class="row" style="margin-top:10px;">
                            <div class="col-md-12">
								<label>Answer<span class="required">*</span></label>
                                <textarea rows="7" cols="80" name="answer" placeholder="Write your content here...." class="form-control form-control-line"><%=data.details.answer%></textarea>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label style="width:100%">&nbsp;</label>
                                       <input type="checkbox" id="status" name="is_publish" <%=data.details.is_publish ? 'checked':''%> >
                                    <label for="status">Publish</label>
                                </div>
                            </div>
                        </div> 

                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label style="width:100%">&nbsp;</label>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<%- contentFor('page_js') %>

<script>
    $(document).ready(function () {
        $("#communtyQuestionForm").validate({
            rules:{
                category:{
                    required: true
                },
                question:{
                    required: true
                },
				answer:{
                    required: true
                }   
            },
            errorElement:'div'
        })
    });
</script>