<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Filter</h3>
            <div class="box-tools pull-right">
                <a href="/admin/banner-advertisement/add" class="btn btn-primary">Add New Banner Advertisement</a>
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <form class="form-material" method="post">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Title</label>
                            <input type="text" name="banner_advertisement_title" placeholder="Title" class="form-control form-control-line" value="<%=data.filterDatas.banner_advertisement_title%>">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label style="width:100%">&nbsp;</label>
                            <button type="submit" class="btn btn-primary" name="filter" value="1">Filter</button>
                            <button type="submit" class="btn btn-default" name="filter" value="2">Reset</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-header with-border">
                    <h3 class="box-title">Banner Advertisement List</h3>
                </div>
                <div class="box-body">
                    <%- include ('./partials/admin_messages') %>
                    <table id="example2" class="table table-bordered table-striped">
                        <thead>
                            <tr class="headings">
                                <th>Title</th>
                                <th>Image</th>
                                <th>Status</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                        <%
                        if(data.bannerAdvertisementList && data.bannerAdvertisementList.length > 0){
                            data.bannerAdvertisementList.forEach((individualBannerAd)=>{
                        %>
                            <tr> 
                                <td><%=individualBannerAd.banner_advertisement_title%></td>
                                <td><img src="<%=`/uploads/banner_advertisement/${individualBannerAd.banner_advertisement_image}`%>" alt="<%= individualBannerAd.banner_advertisement_title%>" style="height: 50px; width: 50px;"></td>
                                
                                <td><% if(individualBannerAd.is_active){ %>
                                    <span class="chip green lighten-5">
                                    <span class="green-text">Active</span>
                                    </span>
                                    <% }else{ %>
                                    <span class="chip red lighten-5">
                                    <span class="red-text">Inactive</span>
                                    </span>
                                    <% } %>
                                </td>
                                <td>
                                    <div class="row text-center">
                                        <div class="col-md-1">
                                            <a href="/admin/banner-advertisement/update/<%= individualBannerAd._id%>" class="btn btn-warning btn-xs" style="color:#fff"><i class="fa fa-edit"></i></a>
                                        </div>
                                       <div class="col-md-1">                                            
											<a href="/admin/banner-advertisement/delete/<%= individualBannerAd._id%>" class="btn btn-danger btn-xs" style="color:#fff" onclick="return confirm('Are you sure,you want to delete this record ?')"><i class="fa fa-trash"></i></a>
                                       </div>
                                    </div>
                                </td>
                            </tr>
                        <% })
                        } %>
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
    <!-- /.row -->
</section>
<%- contentFor('page_js') %>